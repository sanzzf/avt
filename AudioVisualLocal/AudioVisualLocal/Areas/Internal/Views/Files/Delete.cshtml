@model AudioVisualModule.Models.Files
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete File</h2>

<h3>Are you sure you want to delete this file?</h3>
<div>
    <hr />


    <h1>@Html.DisplayFor(model => Model.FileName) </h1>
    <p>
        @Html.DisplayFor(model => Model.DateCreated)
    </p>
    <p>
        @Html.DisplayFor(model => Model.FilePath)
    </p>
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <p class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btnRounded" />
            <input type="button" value="Back to List" onclick="location.href='@Url.Action("Index", "Files")'" class="btn btnRounded btnSecondary" />
        </p>
    }
</div>