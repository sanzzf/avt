@model AudioVisualModule.Models.Event
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Event</h2>
<h3>Are you sure you want to delete this event?</h3>
<div>
    <hr />

    <h1>@Html.DisplayFor(model => Model.Name) </h1>
    <p>
        @Html.DisplayFor(model => Model.Description)
    </p>
    <p>
        @Html.DisplayFor(model => Model.StartDate)
    </p>
    <p>
        @Html.DisplayFor(model => Model.EndDate)
    </p>
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <p class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btnRounded" />
            <input type="button" value="Back to List" onclick="location.href='@Url.Action("Index", "Files")'" class="btn btnRounded btnSecondary" />
        </p>
    }
</div>
